CREATE DATABASE  IF NOT EXISTS `trading`;
USE `trading`;
DROP TABLE IF EXISTS SHOP_SKU_AMOUNT_BINDING;
create table SHOP_SKU_AMOUNT_BINDING( 
   SHOP_ID BIGINT(15) unsigned NOT NULL COMMENT '商店编号',
   SKU_ID BIGINT(15) unsigned NOT NULL COMMENT '货物编号',
   SHOP_SKU_AMOUNT BIGINT(15) unsigned NOT NULL COMMENT '商店货物数量',
   primary Key (SHOP_ID,SKU_ID)
）ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='商店货物数量信息表';

   

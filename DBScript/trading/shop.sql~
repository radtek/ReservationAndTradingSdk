CREATE DATABASE  IF NOT EXISTS `trading`;
USE `trading`;
DROP TABLE IF EXISTS SHOP;
create table SHOP( 
   SHOP_ID BIGINT(15) unsigned NOT NULL COMMENT '商店编号',
   SHOP_NAME VARCHAR(60) NOT NULL COMMENT '商店名称',
   SHOP_ADDR VARCHAR(100) NOT NULL COMMENT '商店地址',
   SHOP_LONGITUDE float NOT NULL COMMENT '商店经度', 
   SHOP_LATITUDE float NOT NULL COMMENT '商店维度',
   SHOP_ROLE_ID VARCHAR(15) COMMENT '商店角色ID',
   SHOP_MESS_UPDATE_DATE DATE NOT NULL '商店信息更新日期'，
   primary Key (SHOP_ID)
)ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='商店信息表';

   
